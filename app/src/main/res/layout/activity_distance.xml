<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_color1">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="건물 간 거리 알아보기"
        android:textSize="27dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="40dp"
>

        <ImageButton
            android:id="@+id/btnBD1"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/bonbd"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnBD2"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/library"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnBD3"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/truth"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/btnBD4"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/mogyang"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnBD5"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/art"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnBD6"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/sport"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="50dp">

        <ImageButton
            android:id="@+id/btnBD7"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/hall"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnBD8"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/lodging"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnBD9"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/victory"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/btnBD10"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/wisdom"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnBD11"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/molding"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnBD12"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/auditorium"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="349dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="50dp">

        <ImageButton
            android:id="@+id/btnBD13"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="120dp"
            android:src="@drawable/welfare"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:textStyle="bold" />

    </LinearLayout>



</LinearLayout>